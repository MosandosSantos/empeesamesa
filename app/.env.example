# Database Configuration
# PostgreSQL connection string (Neon, Supabase, or your own PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# JWT Secret for authentication
# Generate a secure random string for production (minimum 32 characters)
JWT_SECRET="your-secure-jwt-secret-change-in-production"

# Email Configuration (SMTP)
# Use your email provider's SMTP settings
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@example.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="Your App Name <your-email@example.com>"

# Base URL for invite links
# Set to your production domain in production
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
